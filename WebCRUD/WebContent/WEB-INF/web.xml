<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>WebCRUD</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.zhiyou.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>show</servlet-name>
    <servlet-class>com.zhiyou.controller.ShowServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>show</servlet-name>
    <url-pattern>/show</url-pattern>
    <url-pattern>/add</url-pattern>
    <url-pattern>/deleteById</url-pattern>
    <url-pattern>/update</url-pattern>
    <url-pattern>/alter</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.zhiyou.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <listener>
    <listener-class>com.zhiyou.listener.MySession</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>Get</display-name>
    <servlet-name>Get</servlet-name>
    <servlet-class>com.zhiyou.controller.Get</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Get</servlet-name>
    <url-pattern>/Get</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Exitcontroller</display-name>
    <servlet-name>Exitcontroller</servlet-name>
    <servlet-class>com.zhiyou.controller.Exitcontroller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Exitcontroller</servlet-name>
    <url-pattern>/Exitcontroller</url-pattern>
  </servlet-mapping>
</web-app>